@model FCBarcelonaApp.Models.Order.OrderConfirmVM
@{
    ViewData["Title"] = "Confirm";
}

<h1>Confirm Order</h1>
<form asp-controller="Order" asp-action="Create" method="post">
    <div>

        <hr />
        <dl class="row">
           
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game)
            </dd>
            <dt class="col-sm-2">
                Picture
            </dt>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalPrice)
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <input type="submit" value="Confirm" class="btn btn-primary" />
    </div>
    <input type="hidden" asp-for="GameId" value="@Model.GameId" />
    <input type="hidden" asp-for="Quantity" value="@Model.Quantity" />
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <input type="hidden" asp-for="Price" value="@Model.Price" />
    
</form>
<div>
    <a asp-controller="Game" asp-action="Index">Back to list</a>
</div>